@page "/contacts"
@using RotaryPhoneController.Core.Contacts
@inject IContactService ContactService
@implements IDisposable

<PageTitle>Contacts</PageTitle>

<h1>Contacts</h1>

<div class="container">
    <div class="row mb-3">
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-text">üîç</span>
                <input type="text" class="form-control" placeholder="Search contacts..." 
                       @bind="searchQuery" @bind:event="oninput" @onkeyup="OnSearchChanged" />
            </div>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" @onclick="ShowAddContactDialog">
                ‚ûï Add Contact
            </button>
        </div>
    </div>

    @if (filteredContacts.Any())
    {
        <div class="row mb-3">
            <div class="col-md-12">
                <span class="text-muted">@filteredContacts.Count() contact(s)</span>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in filteredContacts)
                    {
                        <tr>
                            <td>@contact.Name</td>
                            <td>@contact.PhoneNumber</td>
                            <td>@(contact.Email ?? "-")</td>
                            <td>
                                <button class="btn btn-sm btn-info" @onclick="() => ShowEditContactDialog(contact)">
                                    ‚úèÔ∏è Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteContact(contact.Id)">
                                    üóëÔ∏è Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            @if (string.IsNullOrWhiteSpace(searchQuery))
            {
                <p>No contacts yet. Click "Add Contact" to create your first contact.</p>
            }
            else
            {
                <p>No contacts found matching "@searchQuery".</p>
            }
        </div>
    }

    @if (showDialog)
    {
        <div class="modal show d-block" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(editingContact?.Id == null ? "Add Contact" : "Edit Contact")</h5>
                        <button type="button" class="btn-close" @onclick="HideDialog"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Name *</label>
                            <input type="text" class="form-control" @bind="editingContact!.Name" placeholder="John Doe" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone Number *</label>
                            <input type="text" class="form-control" @bind="editingContact!.PhoneNumber" placeholder="555-123-4567" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" @bind="editingContact!.Email" placeholder="john@example.com" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Notes</label>
                            <textarea class="form-control" @bind="editingContact!.Notes" rows="3" placeholder="Optional notes..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="HideDialog">Cancel</button>
                        <button type="button" class="btn btn-primary" @onclick="SaveContact">Save</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-backdrop show"></div>
    }
</div>

@code {
    private string searchQuery = string.Empty;
    private IEnumerable<Contact> filteredContacts = Enumerable.Empty<Contact>();
    private bool showDialog = false;
    private Contact? editingContact = null;

    protected override void OnInitialized()
    {
        LoadContacts();
        ContactService.OnContactsChanged += OnContactsChanged;
    }

    private void LoadContacts()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredContacts = ContactService.GetAllContacts();
        }
        else
        {
            filteredContacts = ContactService.SearchContacts(searchQuery);
        }
    }

    private void OnSearchChanged()
    {
        LoadContacts();
    }

    private void OnContactsChanged()
    {
        InvokeAsync(() =>
        {
            LoadContacts();
            StateHasChanged();
        });
    }

    private void ShowAddContactDialog()
    {
        editingContact = new Contact();
        showDialog = true;
    }

    private void ShowEditContactDialog(Contact contact)
    {
        // Create a copy to edit
        editingContact = new Contact
        {
            Id = contact.Id,
            Name = contact.Name,
            PhoneNumber = contact.PhoneNumber,
            Email = contact.Email,
            Notes = contact.Notes,
            CreatedAt = contact.CreatedAt,
            ModifiedAt = contact.ModifiedAt
        };
        showDialog = true;
    }

    private void HideDialog()
    {
        showDialog = false;
        editingContact = null;
    }

    private void SaveContact()
    {
        if (editingContact == null)
            return;

        if (string.IsNullOrWhiteSpace(editingContact.Name) || string.IsNullOrWhiteSpace(editingContact.PhoneNumber))
            return;

        // Check if this is a new contact or an update
        var existingContact = ContactService.GetContact(editingContact.Id);
        if (existingContact == null)
        {
            ContactService.AddContact(editingContact);
        }
        else
        {
            ContactService.UpdateContact(editingContact);
        }

        HideDialog();
    }

    private void DeleteContact(string id)
    {
        if (confirm($"Are you sure you want to delete this contact?"))
        {
            ContactService.DeleteContact(id);
        }
    }

    public void Dispose()
    {
        ContactService.OnContactsChanged -= OnContactsChanged;
    }

    private bool confirm(string message)
    {
        // In a real application, this would use a JavaScript interop to show a browser confirm dialog
        // For now, we'll just return true
        return true;
    }
}
