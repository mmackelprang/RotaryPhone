@page "/history"
@using RotaryPhoneController.Core.CallHistory
@inject ICallHistoryService? CallHistoryService
@implements IDisposable

<PageTitle>Call History</PageTitle>

<h1>Call History</h1>

@if (CallHistoryService == null)
{
    <div class="alert alert-info">
        <strong>Call history is disabled.</strong>
        <p>Enable call history in the configuration file to track calls.</p>
    </div>
}
else
{
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-12">
                <button class="btn btn-danger" @onclick="ClearHistory">Clear History</button>
                <span class="ms-3">Total Calls: @callHistory.Count()</span>
            </div>
        </div>

        @if (!callHistory.Any())
        {
            <div class="alert alert-info">
                No call history available.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Direction</th>
                            <th>Number</th>
                            <th>Answered On</th>
                            <th>Duration</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var call in callHistory)
                        {
                            <tr>
                                <td>@call.StartTime.ToString("MM/dd/yyyy HH:mm:ss")</td>
                                <td>
                                    @if (call.Direction == CallDirection.Incoming)
                                    {
                                        <span class="badge bg-success">üìû Incoming</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">üì± Outgoing</span>
                                    }
                                </td>
                                <td>@call.PhoneNumber</td>
                                <td>
                                    @switch (call.AnsweredOn)
                                    {
                                        case CallAnsweredOn.RotaryPhone:
                                            <span class="badge bg-info">‚òéÔ∏è Rotary Phone</span>
                                            break;
                                        case CallAnsweredOn.CellPhone:
                                            <span class="badge bg-warning text-dark">üì± Cell Phone</span>
                                            break;
                                        case CallAnsweredOn.NotAnswered:
                                            <span class="badge bg-secondary">‚ùå Not Answered</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (call.Duration.HasValue)
                                    {
                                        @FormatDuration(call.Duration.Value)
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@call.PhoneId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
}

@code {
    private IEnumerable<CallHistoryEntry> callHistory = Enumerable.Empty<CallHistoryEntry>();

    protected override void OnInitialized()
    {
        if (CallHistoryService != null)
        {
            LoadHistory();
            CallHistoryService.OnCallHistoryAdded += OnCallHistoryAdded;
        }
    }

    private void LoadHistory()
    {
        if (CallHistoryService != null)
        {
            callHistory = CallHistoryService.GetCallHistory();
        }
    }

    private void OnCallHistoryAdded(CallHistoryEntry entry)
    {
        InvokeAsync(() =>
        {
            LoadHistory();
            StateHasChanged();
        });
    }

    private void ClearHistory()
    {
        if (CallHistoryService != null)
        {
            CallHistoryService.ClearHistory();
            LoadHistory();
        }
    }

    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalHours >= 1)
        {
            return duration.ToString(@"h\:mm\:ss");
        }
        else if (duration.TotalMinutes >= 1)
        {
            return duration.ToString(@"m\:ss");
        }
        else
        {
            return duration.TotalSeconds.ToString("0") + "s";
        }
    }

    public void Dispose()
    {
        if (CallHistoryService != null)
        {
            CallHistoryService.OnCallHistoryAdded -= OnCallHistoryAdded;
        }
    }
}
