@page "/history"
@using RotaryPhoneController.Core.CallHistory
@using RotaryPhoneController.Core.Contacts
@using RotaryPhoneController.Core.Configuration
@inject ICallHistoryService? CallHistoryService
@inject IContactService? ContactService
@inject AppConfiguration AppConfig
@implements IDisposable

<PageTitle>Call History</PageTitle>

<h1>Call History</h1>

@if (CallHistoryService == null)
{
    <div class="alert alert-info">
        <strong>Call history is disabled.</strong>
        <p>Enable call history in the configuration file to track calls.</p>
    </div>
}
else
{
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <button class="btn btn-danger" @onclick="ClearHistory">Clear History</button>
                <span class="ms-3">Total Calls: @callHistory.Count()</span>
            </div>
            @if (AppConfig.Phones.Count > 1)
            {
                <div class="col-md-6">
                    <label class="form-label">Filter by Phone:</label>
                    <select class="form-select" @bind="selectedPhoneFilter" @bind:after="OnFilterChanged">
                        <option value="">All Phones</option>
                        @foreach (var phone in AppConfig.Phones)
                        {
                            <option value="@phone.Id">@phone.Name</option>
                        }
                    </select>
                </div>
            }
        </div>

        @if (!callHistory.Any())
        {
            <div class="alert alert-info">
                No call history available.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Direction</th>
                            <th>Contact/Number</th>
                            <th>Answered On</th>
                            <th>Duration</th>
                            @if (AppConfig.Phones.Count > 1)
                            {
                                <th>Phone</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var call in callHistory)
                        {
                            <tr>
                                <td>@call.StartTime.ToString("MM/dd/yyyy HH:mm:ss")</td>
                                <td>
                                    @if (call.Direction == CallDirection.Incoming)
                                    {
                                        <span class="badge bg-success">üìû Incoming</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">üì± Outgoing</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var contact = ContactService?.FindByPhoneNumber(call.PhoneNumber);
                                        @if (contact != null)
                                        {
                                            <div>
                                                <strong>@contact.Name</strong><br/>
                                                <small class="text-muted">@call.PhoneNumber</small>
                                            </div>
                                        }
                                        else
                                        {
                                            @call.PhoneNumber
                                        }
                                    }
                                </td>
                                <td>
                                    @switch (call.AnsweredOn)
                                    {
                                        case CallAnsweredOn.RotaryPhone:
                                            <span class="badge bg-info">‚òéÔ∏è Rotary Phone</span>
                                            break;
                                        case CallAnsweredOn.CellPhone:
                                            <span class="badge bg-warning text-dark">üì± Cell Phone</span>
                                            break;
                                        case CallAnsweredOn.NotAnswered:
                                            <span class="badge bg-secondary">‚ùå Not Answered</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (call.Duration.HasValue)
                                    {
                                        @FormatDuration(call.Duration.Value)
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                @if (AppConfig.Phones.Count > 1)
                                {
                                    <td>
                                        @{
                                            var phone = AppConfig.Phones.FirstOrDefault(p => p.Id == call.PhoneId);
                                            @(phone?.Name ?? call.PhoneId)
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
}

@code {
    private IEnumerable<CallHistoryEntry> callHistory = Enumerable.Empty<CallHistoryEntry>();
    private string selectedPhoneFilter = string.Empty;

    protected override void OnInitialized()
    {
        if (CallHistoryService != null)
        {
            LoadHistory();
            CallHistoryService.OnCallHistoryAdded += OnCallHistoryAdded;
        }
    }

    private void LoadHistory()
    {
        if (CallHistoryService != null)
        {
            var allHistory = CallHistoryService.GetCallHistory();
            
            // Apply phone filter if selected
            if (!string.IsNullOrEmpty(selectedPhoneFilter))
            {
                callHistory = allHistory.Where(c => c.PhoneId == selectedPhoneFilter);
            }
            else
            {
                callHistory = allHistory;
            }
        }
    }

    private void OnFilterChanged()
    {
        LoadHistory();
    }

    private void OnCallHistoryAdded(CallHistoryEntry entry)
    {
        InvokeAsync(() =>
        {
            LoadHistory();
            StateHasChanged();
        });
    }

    private void ClearHistory()
    {
        if (CallHistoryService != null)
        {
            CallHistoryService.ClearHistory();
            LoadHistory();
        }
    }

    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalHours >= 1)
        {
            return duration.ToString(@"h\:mm\:ss");
        }
        else if (duration.TotalMinutes >= 1)
        {
            return duration.ToString(@"m\:ss");
        }
        else
        {
            return duration.TotalSeconds.ToString("0") + "s";
        }
    }

    public void Dispose()
    {
        if (CallHistoryService != null)
        {
            CallHistoryService.OnCallHistoryAdded -= OnCallHistoryAdded;
        }
    }
}
