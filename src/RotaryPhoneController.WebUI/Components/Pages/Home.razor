@page "/"
@using RotaryPhoneController.Core
@using RotaryPhoneController.Core.Contacts
@using RotaryPhoneController.Core.Configuration
@inject CallManager CallManager
@inject PhoneManagerService PhoneManagerService
@inject AppConfiguration AppConfig
@inject ISipAdapter SipAdapter
@inject IContactService? ContactService
@implements IDisposable

<PageTitle>Rotary Phone Controller</PageTitle>

<h1>Rotary Phone Controller</h1>

<div class="container">
    @if (AppConfig.Phones.Count > 1)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">☎️ Phone Selection</h4>
                    </div>
                    <div class="card-body">
                        <div class="btn-group" role="group">
                            @foreach (var phone in AppConfig.Phones)
                            {
                                <button type="button" 
                                        class="btn @(selectedPhoneId == phone.Id ? "btn-primary" : "btn-outline-primary")"
                                        @onclick="() => SelectPhone(phone.Id)">
                                    @phone.Name
                                </button>
                            }
                        </div>
                        <p class="mt-2 mb-0">
                            <small class="text-muted">
                                Selected: <strong>@currentPhone?.Name</strong> (@currentPhone?.Id)
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Current State @(AppConfig.Phones.Count > 1 ? $"- {currentPhone?.Name}" : "")</h3>
                </div>
                <div class="card-body">
                    <h2 class="display-4">@currentCallManager?.CurrentState</h2>
                    @if (!string.IsNullOrEmpty(currentCallManager?.DialedNumber))
                    {
                        var contact = ContactService?.FindByPhoneNumber(currentCallManager.DialedNumber);
                        @if (contact != null)
                        {
                            <p><strong>Contact:</strong> @contact.Name</p>
                            <p><strong>Number:</strong> @currentCallManager.DialedNumber</p>
                        }
                        else
                        {
                            <p><strong>Dialed Number:</strong> @currentCallManager.DialedNumber</p>
                        }
                    }
                </div>
            </div>
        </div>
        @if (AppConfig.Phones.Count > 1)
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>All Phones Status</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Phone</th>
                                    <th>State</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var (phoneId, callManager) in PhoneManagerService.GetAllPhones())
                                {
                                    var phone = AppConfig.Phones.FirstOrDefault(p => p.Id == phoneId);
                                    <tr class="@(phoneId == selectedPhoneId ? "table-primary" : "")">
                                        <td>@phone?.Name</td>
                                        <td>
                                            <span class="badge @GetStateBadgeClass(callManager.CurrentState)">
                                                @callManager.CurrentState
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>Mock Event Controls</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <button class="btn btn-primary btn-lg" @onclick="SimulateIncomingCall">
                            📞 Simulate Mobile Incoming Call
                        </button>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-success btn-lg me-2" @onclick="SimulateOffHook">
                            🔓 Simulate Handset OFF-HOOK
                        </button>
                        <button class="btn btn-danger btn-lg" @onclick="SimulateOnHook">
                            🔒 Simulate Handset ON-HOOK
                        </button>
                    </div>

                    <div class="mb-3">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Enter number (e.g., 5551234567)" 
                                   @bind="digitsInput" />
                            <button class="btn btn-info" @onclick="SimulateDigitsReceived">
                                🔢 Simulate Digits Received
                            </button>
                        </div>
                    </div>
                    @if (AppConfig.Phones.Count > 1)
                    {
                        <div class="alert alert-info mt-3">
                            <small>
                                <strong>Note:</strong> Mock controls operate on the currently selected phone: <strong>@currentPhone?.Name</strong>
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>State Machine Flow</h3>
                </div>
                <div class="card-body">
                    <ul>
                        <li><strong>Idle</strong> → Incoming Call → <strong>Ringing</strong> → OFF-HOOK → <strong>InCall</strong> → ON-HOOK → <strong>Idle</strong></li>
                        <li><strong>Idle</strong> → OFF-HOOK → <strong>Dialing</strong> → Enter Digits → <strong>InCall</strong> → ON-HOOK → <strong>Idle</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string digitsInput = string.Empty;
    private string selectedPhoneId = string.Empty;
    private RotaryPhoneConfig? currentPhone = null;
    private CallManager? currentCallManager = null;

    protected override void OnInitialized()
    {
        // Initialize with first phone or the default injected CallManager
        if (AppConfig.Phones.Any())
        {
            selectedPhoneId = AppConfig.Phones[0].Id;
            currentPhone = AppConfig.Phones[0];
            currentCallManager = PhoneManagerService.GetPhone(selectedPhoneId) ?? CallManager;
        }
        else
        {
            currentCallManager = CallManager;
        }
        
        // Subscribe to state changes for all phones
        foreach (var (phoneId, callManager) in PhoneManagerService.GetAllPhones())
        {
            callManager.StateChanged += OnStateChanged;
        }
    }

    private void SelectPhone(string phoneId)
    {
        selectedPhoneId = phoneId;
        currentPhone = AppConfig.Phones.FirstOrDefault(p => p.Id == phoneId);
        currentCallManager = PhoneManagerService.GetPhone(phoneId);
        StateHasChanged();
    }

    private void OnStateChanged()
    {
        // Notify Blazor that the state has changed and UI should update
        InvokeAsync(StateHasChanged);
    }

    private string GetStateBadgeClass(CallState state)
    {
        return state switch
        {
            CallState.Idle => "bg-secondary",
            CallState.Dialing => "bg-info",
            CallState.Ringing => "bg-warning",
            CallState.InCall => "bg-success",
            _ => "bg-secondary"
        };
    }

    private void SimulateIncomingCall()
    {
        currentCallManager?.SimulateIncomingCall();
    }

    private void SimulateOffHook()
    {
        if (SipAdapter is SIPSorceryAdapter adapter)
        {
            adapter.TriggerHookChange(true);
        }
    }

    private void SimulateOnHook()
    {
        if (SipAdapter is SIPSorceryAdapter adapter)
        {
            adapter.TriggerHookChange(false);
        }
    }

    private void SimulateDigitsReceived()
    {
        if (!string.IsNullOrEmpty(digitsInput))
        {
            if (SipAdapter is SIPSorceryAdapter adapter)
            {
                adapter.TriggerDigitsReceived(digitsInput);
            }
        }
    }

    public void Dispose()
    {
        // Unsubscribe from events
        foreach (var (phoneId, callManager) in PhoneManagerService.GetAllPhones())
        {
            callManager.StateChanged -= OnStateChanged;
        }
    }
}

